<LinearLayout android:id="@+id/right_container"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="30dp"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="8dp"
    android:paddingBottom="8dp"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="10:24"
                android:textColor="#acaab2"
                android:textSize="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sendbird_bg_chat_bubble_purple"
            >
            <TextView
                android:layout_gravity="right"
                android:id="@+id/txt_right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SenderName"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="Lorem Ipsum is"
                android:textSize="15sp"
                android:textColor="#3d3d3d"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            >
            <ImageView
                android:id="@+id/img_right_thumbnail"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerCrop"
                android:visibility="visible"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>