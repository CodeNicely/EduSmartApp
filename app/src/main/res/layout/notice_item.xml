<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/teacher_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin_medium"
        android:padding="4dp"
        app:cardCornerRadius="@dimen/card_radius_medium"
        app:contentPadding="@dimen/card_padding_medium">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notice_logo"
                android:padding="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blshdish"
                android:padding="10dp"
                android:id="@+id/notice_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="fsdfdzx"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/notice_description" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dfhahf"
                android:padding="10dp"
                android:id="@+id/notice_author"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nsfuagf"
                android:padding="10dp"
                android:id="@+id/notice_timestamp"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>